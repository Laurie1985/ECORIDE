{
    "name": "projet-ecoride/ecoride-php",
    "description": "Application de covoiturage ecologique",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "nikic/fast-route": "^1.3",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mongodb": "*",
        "mongodb/mongodb": "^1.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}